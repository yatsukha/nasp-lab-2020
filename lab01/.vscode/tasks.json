{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Meson build",
			"command": "meson",
			"args": [
				"compile",
				"&&",
				"echo",
				"DONE"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		}
	]
}